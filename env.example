# Production-Ready Development Environment Variables
# Copy this file to .env and modify as needed

# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password123
MONGO_DATABASE=blog_platform

# Backend Configuration
NODE_ENV=development
PORT=5000
JWT_SECRET=your-super-secret-jwt-key-dev-change-in-production
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Redis Configuration
REDIS_PASSWORD=redis-dev-password

# Frontend Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_WS_URL=ws://localhost:5000

# MongoDB Express Configuration
ME_CONFIG_BASICAUTH_USERNAME=admin
ME_CONFIG_BASICAUTH_PASSWORD=admin123

# Monitoring Configuration
GRAFANA_PASSWORD=admin123

# Development Features
DEBUG=true
LOG_LEVEL=debug 